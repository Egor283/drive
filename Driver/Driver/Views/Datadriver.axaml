<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Driver.Views.Datadriver">
    <Grid RowDefinitions="*, 50">
        <DataGrid Name="DG" AutoGenerateColumns="True" Grid.Row="0" IsReadOnly="True"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
        <Button Content="Удалить" Name="DelBtn" Click="DelBtn_OnClick"/>
        <Button Content="Добавить" Name="DobBtn" Click="DobBtn_OnClick"/>
        <Button Content="Посмотреть" Name="EditBtn" Click="EditBtn_OnClick"/>
        <Button Content="Обновить" Name="ObnBtn" Click="ObnBtn_OnClick"/>
    </StackPanel>
    </Grid>
</UserControl>
